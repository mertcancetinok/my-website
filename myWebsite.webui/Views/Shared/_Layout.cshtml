  // {
  //   new SocialMedia() {SocialName = "facebook", Url = "https://www.facebook.com/mertcan.cetinok"},
  //   new SocialMedia() {SocialName = "github", Url = "https://www.github.com/mertcancetinok"},
  //   new SocialMedia() {SocialName = "instagram", Url = "https://www.instagram.com/mertcancetinok"},
  //   new SocialMedia() {SocialName = "twitter", Url = "https://www.twitter.com/mertcancetinoks"},
  // };
  UserSocialView userSocialView = new UserSocialView()
  {
    user = userRepository.getUser(),
    SocialMediae = socialRepository.GetAll()
  };
}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="~/css/bootstrap.min.css">
  <link rel="stylesheet" href="~/css/style.css">
  <link rel="stylesheet" href="~/css/media-query.css">
  <script src="https://kit.fontawesome.com/872bacee61.js" crossorigin="anonymous"></script>
  <script src="~/js/jquery.min.js"></script>

</head>

<body>
  <div id="particles-js"></div>
  
  <script type="text/javascript" src="~/js/particles.js"></script>
  <script type="text/javascript" src="~/js/app.js"></script>
  <nav role="navigation" class="nav2">
    <i class="fas fa-bars fa-2x nav-icon"></i>
    <ul id="menu">
      <li>
        <a href="index.html">Anasayfa</a>
      </li>
      <li><a href="about.html">Hakkımda</a></li>
      <li><a href="contact.html">İletişim</a></li>
      <li><a href="portfolyo.html">Portfolyo</a></li>
      <li><a href="blog.html">Blog</a></li>

    </ul>

  </nav>
  <main>
    <section id="home">
      <div class="row p-4">

        <header class="col-md-3 text-center p-5 left-column">
          <img src="~/img/photo.png" alt="This image is unvalible" class="img-fluid mx-auto d-block">
          <h3 class="text-center mt-5">@userSocialView.user.FullName</h3>
          <p class="text-center mt-2">@userSocialView.user.JobTitle</p>
          <div class="icons col-md-12 mt-3">
            @foreach (var item in userSocialView.SocialMediae)
            {
              <a href="@item.Url" target="_blank"><i class="fab fa-@item.SocialName ml-3"></i></a>
            }
            
          </div>
          <button class="btn btn-dark mt-5"><i class="fas fa-download"></i><span class="ml-2"> Download CV </span></button>

        </header>
        <div class="col-md-6 right-column d-flex justify-content-center text-center @ViewData["pageName"]">

          @RenderBody()
        </div>

        <nav class="col-md-1 mx-5 navbar navbar-expand-sm" style="background-color: #222222 !important;">
          <ul class="navbar-nav text-center mx-auto">
            <li class="nav-item">
              <a asp-controller="Home" asp-action="Index" class="nav-link mt-3">
                <i class="fas fa-home fa-2x">
                </i>
                <p class="i-text">Anasayfa</p>
              </a>
              <a asp-controller="Home" asp-action="About" class="nav-link mt-3">
                <i class="fas fa-book fa-2x">
                </i>
                <p class="i-text">Hakkımda</p>
              </a>
              <a asp-controller="Home" asp-action="Contact" class="nav-link mt-3">
                <i class="fas fa-phone fa-2x"></i>
                <p class="i-text">İletişim</p>
              </a>
              <a asp-controller="Home" asp-action="Portfolyo" class="nav-link mt-3">
                <i class="fas fa-briefcase fa-2x"></i>
                <p class="i-text">Portfolyo</p>
              </a>
              <a asp-controller="Home" asp-action="Blog" class="nav-link mt-3">
                <i class="fas fa-blog fa-2x"></i><br>
                <p class="i-text">Blog</p>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </section>

  </main>
  <script src="~/js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function() {
      $(".nav-icon").click(function(e) {
        if ($(this).hasClass("fa-bars")) {
          $(this).removeClass("fa-bars");
          $(this).addClass("fa-times");
          $("#menu").css({
            "display": "block",
            "position": "fixed"
          });
          $("#menu").animate({
            height: "100%",
            width: "100%"
          });
        } else {
          $(this).removeClass("fa-times");
          $(this).addClass("fa-bars");
          $("#menu").css("display", "none");
        }
      });
    });
  </script>
</body>

</html>